    "version": "0.2.0",
    "configurations": [
        {
            "name": "Server",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "cwd": "${workspaceFolder}",
            "program": "./cmd/server"
        },
        {
            "name": "Client",
            "type": "go",
            "cwd": "${workspaceFolder}",
            "request": "attach",
            "mode": "remote",
            "remotePath": "${workspaceFolder}",
            "port": 2345,
            "host": "127.0.0.1",
            "preLaunchTask": "dlv",
            "postDebugTask": "Terminate All Tasks",
        }
    ]
}
